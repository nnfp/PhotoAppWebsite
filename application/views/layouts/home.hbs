<!DOCTYPE html>
<html lang="en">

<head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Karla&family=Press+Start+2P&display=swap');
  </style>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <link rel="stylesheet" type="text/css" href="/public/css/site-theme.css">
  <link rel="stylesheet" type="text/css" href="/public/css/grid.css">
  <link rel="stylesheet" type="text/css" href="/public/css/flexbox.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script defer type="text/javascript" src="/public/js/home.js"></script>
  <script defer type="text/javascript" src="/public/js/registration.js"></script>
  <script defer type="text/javascript" src="/public/js/frontend.js"></script>
</head>

<body>
  <div id="site-container">
    {{log this}}
    {{> header}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{{body}}}
    {{> footer}}
  </div>
  {{#if logged}}
    <script>
      let ele=document.getElementById('logout-button');
      if(ele){
        ele.onclick = (event) => {
          fetch('/users/logout',{
            method:"POST"
          })
          .then((data) => {
            location.replace('/');
          })
        }
      }
    </script>
  {{/if}}
</body>

</html>